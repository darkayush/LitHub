<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0A0325">

    <ScrollView
        android:id="@+id/main_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottomNav">

        <LinearLayout
            android:id="@+id/main_content_container"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Top bar -->
            <LinearLayout
                android:id="@+id/top_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <ImageView
                    android:id="@+id/menu_icon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginTop="12dp"
                    android:src="@drawable/ic_menu" />

                <ImageView
                    android:id="@+id/app_logo"
                    android:layout_width="130dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="12dp"
                    android:src="@drawable/lithub_logo"
                    android:layout_marginStart="12dp" />
            </LinearLayout>

            <!-- Search Bar -->
            <EditText
                android:id="@+id/search_bar"
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:hint="  Search by title, author, or subject"
                android:drawableStart="@drawable/ic_search"
                android:background="@drawable/search_bg"
                android:paddingStart="16dp"
                android:textColorHint="#CCCCCC"
                android:textColor="#FFFFFF" />

            <!-- Toggle Buttons -->
            <RadioGroup
                android:id="@+id/toggle_group"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/toggle_bg"
                android:padding="4dp">

                <RadioButton
                    android:id="@+id/cabin_booking_tab"
                    style="@style/ToggleTab"
                    android:text="Cabin Booking"
                    android:checked="true" />

                <RadioButton
                    android:id="@+id/virtual_groups_tab"
                    style="@style/ToggleTab"
                    android:text="Virtual Groups" />
            </RadioGroup>

            <!-- Section Title -->
            <TextView
                android:id="@+id/section_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Available Cabins"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginBottom="8dp" />

            <!-- Cabin List -->
            <ScrollView
                android:id="@+id/cabin_list_scroll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp">

                <LinearLayout
                    android:id="@+id/cabin_list_container"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <!-- Cabin 1 -->
                    <LinearLayout
                        android:id="@+id/cabin_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingVertical="12dp"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="4dp">

                        <ImageView
                            android:id="@+id/cabin_1_icon"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_cabin"
                            android:layout_marginEnd="12dp"
                            app:tint="#FFFFFF" />

                        <LinearLayout
                            android:id="@+id/cabin_1_info"
                            android:orientation="vertical"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/cabin_1_name"
                                android:text="Cabin 1"
                                android:textColor="#FFFFFF"
                                android:textStyle="bold"
                                android:textSize="14sp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                            <TextView
                                android:id="@+id/cabin_1_capacity"
                                android:text="Capacity: 4 people"
                                android:textColor="#AAAAAA"
                                android:textSize="12sp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </LinearLayout>

                        <Button
                            android:id="@+id/cabin_1_book_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="36dp"
                            android:text="Book Cabin"
                            android:textSize="12sp"
                            android:paddingHorizontal="12dp"
                            android:textColor="#C5BFFF"
                            android:background="@drawable/btn_outline" />
                    </LinearLayout>

                    <!-- Cabin 2 -->
                    <LinearLayout
                        android:id="@+id/cabin_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingVertical="12dp"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="4dp">

                        <ImageView
                            android:id="@+id/cabin_2_icon"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_cabin"
                            android:layout_marginEnd="12dp"
                            app:tint="#FFFFFF" />

                        <LinearLayout
                            android:id="@+id/cabin_2_info"
                            android:orientation="vertical"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/cabin_2_name"
                                android:text="Cabin 2"
                                android:textColor="#FFFFFF"
                                android:textStyle="bold"
                                android:textSize="14sp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                            <TextView
                                android:id="@+id/cabin_2_capacity"
                                android:text="Capacity: 6 people"
                                android:textColor="#AAAAAA"
                                android:textSize="12sp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </LinearLayout>

                        <Button
                            android:id="@+id/cabin_2_book_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="36dp"
                            android:text="Book Cabin"
                            android:textSize="12sp"
                            android:paddingHorizontal="12dp"
                            android:textColor="#C5BFFF"
                            android:background="@drawable/btn_outline" />
                    </LinearLayout>
                </LinearLayout>
            </ScrollView>
        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation -->
    <LinearLayout
        android:id="@+id/bottomNav"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@drawable/nav_bg"
        android:paddingTop="4dp"
        android:paddingBottom="4dp">

        <!-- Resources Tab -->
        <LinearLayout
            android:id="@+id/nav_resources"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/nav_resources_icon"
                android:src="@drawable/ic_book"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:tint="#A0A0A0"/>
            <TextView
                android:id="@+id/nav_resources_text"
                android:text="Resources"
                android:textColor="#A0A0A0"
                android:textSize="12sp"
                android:fontFamily="sans-serif"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>
        </LinearLayout>

        <!-- Group Study Tab (Active) -->
        <LinearLayout
            android:id="@+id/nav_group_study"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/nav_item_active_bg"
            android:paddingTop="8dp"
            android:paddingBottom="8dp">

            <ImageView
                android:id="@+id/nav_group_study_icon"
                android:src="@drawable/ic_groupstudy"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:tint="#C5BFFF"/>
            <TextView
                android:id="@+id/nav_group_study_text"
                android:text="Group Study"
                android:textColor="#C5BFFF"
                android:textSize="12sp"
                android:fontFamily="sans-serif-medium"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>
        </LinearLayout>

        <!-- Collaborate Tab -->
        <LinearLayout
            android:id="@+id/nav_collaborate"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/nav_collaborate_icon"
                android:src="@drawable/ic_collaborate"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:tint="#A0A0A0"/>
            <TextView
                android:id="@+id/nav_collaborate_text"
                android:text="Collaborate"
                android:textColor="#A0A0A0"
                android:textSize="12sp"
                android:fontFamily="sans-serif"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>
        </LinearLayout>

        <!-- Practice Tab -->
        <LinearLayout
            android:id="@+id/nav_practice"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/nav_practice_icon"
                android:src="@drawable/ic_practice"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:tint="#A0A0A0"/>
            <TextView
                android:id="@+id/nav_practice_text"
                android:text="Practice"
                android:textColor="#A0A0A0"
                android:textSize="12sp"
                android:fontFamily="sans-serif"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>